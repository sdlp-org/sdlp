{
  "name": "sdlp-cli",
  "version": "1.3.0",
  "description": "Command-line interface for the Secure Deep Link Protocol (SDLP)",
  "main": "dist/src/index.js",
  "type": "module",
  "bin": {
    "sdlp": "./dist/src/index.js"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sdlp-org/sdlp.git",
    "directory": "implementations/ts/sdlp-cli"
  },
  "bugs": {
    "url": "https://github.com/sdlp-org/sdlp/issues"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/src/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "sdlp",
    "cli",
    "deep-links",
    "cryptography",
    "did",
    "security"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "commander": "^12.1.0",
    "sdlp-sdk": "file:../sdlp-sdk",
    "bs58": "^6.0.0",
    "jose": "^5.9.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitest/coverage-v8": "^3.2.2",
    "eslint": "^9.28.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^59.0.1",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
